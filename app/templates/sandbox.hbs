  <hr/>
</div>

<div class="container--main">
  <div class="row">
    <div class="col-xs-1">
      <div class="header">
        <a>Back</a>
      </div>
    </div>

    <div class="col-xs-10">
      <div class="header">
        <h1>Case Status MVP</h1>
        <button class="btn-primary pull-right">Import from Toggl</button>
      </div>

      <div class="summary">
        <div class="buffer">
          <div class="field">
            <label for="buffer">Buffer</label>
            <span class="percent-sign">%</span>
            {{live-updating-text-input
                name='buffer'
                type='number'
                placeholder='0'
                value=8}}
          </div>
        </div>

        <div class="progress-wrapper">
          <div class="content">
            <span class="section-left">
              <span>
                <p><strong>137</strong></p><p class="small">Estimated</p>
              </span>
              <span>
                <p><strong>92</strong></p><p class="small">Actual</p>
              </span>
            </span>

            <span class="section-right">
              <span class="status yellow">
                <span class="icon"></span>
                <p>83 under</p>
              </span>
            </span>
          </div>
          <div class="progress-bar yellow">
            <div class="fill complete-75 yellow"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>