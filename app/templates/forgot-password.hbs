<div class="navbar login">
  <div class="container">
    <div class="left-nav">
      <div class="logo"></div>
    </div>
    <div class="right-nav">
      <ul class="nav-list">
        <li>{{#link-to 'signup'}}Signup{{/link-to}}</li>
        <li>{{#link-to 'login'}}Login{{/link-to}}</li>
      </ul>
    </div>
  </div>
</div>

<div class="container--main">
  <div class="row center-xs">
    <div class="col-sm-5">

      <div class="header text-center">
        <h1>Forgot your password?</h1>
        <p>Don't worry, just enter your email and we'll send you a link to reset your password.</p>
      </div>

      {{validated-text-input name='email'
                             type='text'
                             placeholder='Enter your email address...'
                             label='Email'
                             value=email
                             error=validations.attrs.email.message
                             showError=showError}}

      <section>
        {{#spin-button action=(action 'submitButtonPressed') buttonStyle="contract" class="btn-primary"}}Submit{{/spin-button}}
      </section>

      <section>
        {{error-message errors=errors}}
      </section>

    </div>
  </div>
</div>