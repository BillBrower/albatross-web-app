<div class="header text-center">
  <h1>Users</h1>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
    <div class="card">
      <h1>Invite a New User</h1>
      {{validated-text-input name='emailAddress'
                             type='text'
                             placeholder='Enter an email...'
                             value=emailAddress
                             error=validations.attrs.emailAddress.message
                             showError=showError}}
      <p class="small">
        To add your teammates to Albatross, just enter their email and we'll send them a link to join
      </p>
      {{#spin-button action=(action 'inviteButtonPressed') class="btn-primary" buttonStyle="contract"}}Invite{{/spin-button}}
    </div>


    <div class="card has-line-items">

      <div class="inner-content">
        <h1>Current Users</h1>
      </div>

      <div class="line-items">
        <div class="items-header">
          <p class="small name">Name</p>
          <p class="small email">Email</p>
        </div>


        <div class="item">
          <div class="name">
            <p>Austin Price</p>
          </div>
          <div class="email">
            <p>austin@builtbykrit.com</p>
          </div>
        </div>

        <div class="item">
          <div class="name">
            <p class="light">Not registered yet</p>
          </div>
          <div class="email">
            <p>kevin@builtbykrit.com</p>
          </div>
        </div>

      </div>
      <!--Todo table-->
      {{#each user in model.users}}

      {{/each}}
    </div>

  </div>

</div>